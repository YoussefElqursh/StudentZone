<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/blue"
    android:elevation="50dp"
    android:orientation="vertical"
    tools:context=".Welcome_Classes.WelcomeActivity">


    <ImageView
        android:id="@+id/activity_welcome_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="579dp"
        android:contentDescription="@string/welcome_page_logo"
        android:src="@drawable/img_students"
        app:srcCompat="@drawable/img_students"
        tools:srcCompat="@drawable/img_students" />

    <LinearLayout
        android:id="@+id/activity_welcome_ll_buttoncontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_welcome_btn_welcome"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_btn_welcom"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/welcome"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>