<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Classes.Student_Activities.StudentContactUsActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="50dp">

            <Button
                android:id="@+id/activity_student_contact_us_btn_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:background="@drawable/custom_btn_back"
                android:contentDescription="@string/back"
                android:drawableStart="@drawable/ic_back"
                android:drawableTint="@color/white_gray"
                android:paddingStart="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Contact US"
                android:textAlignment="center"
                android:textColor="@color/white_gray"
                android:textSize="20sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/activity_student_contact_us_maps"
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/im_map"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get in touch with us !"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_student_settings_cv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp"
                android:focusable="true"
                android:layout_weight="0.333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_smartphone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Phone"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="0482222170"
                        android:textColor="@color/gray"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="1dp"
                android:layout_height="115dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#BDBDBD"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_student_settings_cv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp"
                android:focusable="true"
                android:layout_weight="0.333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Gamal Abd El-Nasir,Qism Shebeen El-Kom,Shibin el Kom,Menofia Governorate"
                        android:textColor="@color/gray"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="1dp"
                android:layout_height="115dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#BDBDBD"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_student_settings_cv_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:focusable="true"
                android:layout_weight="0.333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_email_address_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="E-mail"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="http://mu.menofia.edu.eg"
                        android:textColor="@color/gray"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="If You Got Any Questions. Please,Do Not Hesitate To Send Us A Message."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:minLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/activity_student_contact_us_et_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_et_selector"
                android:drawableStart="@drawable/ic_user_1"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Your Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:drawableTint="@drawable/custom_et_selector"/>

            <EditText
                android:id="@+id/activity_student_contact_us_et_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_et_selector"
                android:drawableStart="@drawable/ic_email_address_1"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:drawableTint="@drawable/custom_et_selector"/>

            <EditText
                android:id="@+id/activity_student_contact_us_et_subject"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_et_selector"
                android:drawableStart="@drawable/ic_subject"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Subject"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:drawableTint="@drawable/custom_et_selector"/>



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/activity_student_contact_us_et_Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="top"
                android:background="@drawable/custom_et_selector"
                android:drawablePadding="10dp"
                android:ems="10"
                android:lines="6"
                android:hint="Message"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:drawableTint="@drawable/custom_et_selector"/>

            <Button
                android:id="@+id/activity_student_contact_us_btn_send"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn_login_save"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck"
                android:textAllCaps="false"
                android:elevation="2dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect with us !"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/facebook_iv"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:padding="5dp"
                android:src="@drawable/ic_facebook"
                android:background="@drawable/custom_btn_close"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/website_iv"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_btn_close"
                android:padding="7dp"
                android:src="@drawable/ic_internet" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>