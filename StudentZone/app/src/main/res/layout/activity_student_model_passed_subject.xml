<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_student_subject_model_container"
    android:layout_marginBottom="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/custom_model_bg"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_student_passed_subject_iv_cv"
                app:cardCornerRadius="30dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/dark_blue">

                <TextView
                    android:id="@+id/activity_student_passed_subject_tv_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="SN"
                    android:textColor="@color/white"
                    android:maxLength="2"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/activity_student_passed_subject_tv_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/activity_student_passed_subject_iv_cv"
                android:text="Subject Name"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activity_student_passed_subject_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="33dp"
                android:layout_toRightOf="@id/activity_student_passed_subject_iv_cv"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                android:text="Score"/>

            <TextView
                android:id="@+id/activity_student_passed_subject_tv_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_toRightOf="@id/activity_student_passed_subject_tv_score"
                android:maxLines="1"
                android:text=" /100"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/activity_student_passed_subject_ibtn_grade"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:background="@drawable/custom_tv_grade"
                    android:layout_marginBottom="-21dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:background="@drawable/ic_certificate"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#46A1A1A1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"/>

</RelativeLayout>