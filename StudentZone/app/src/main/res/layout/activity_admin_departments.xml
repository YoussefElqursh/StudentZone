<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".Admin_Classes.AdminAbsenceFilesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_admin_departments_tbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:menu="@menu/activity_admin_depatrments_tbar_menu"
        app:title="Departments"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/activity_admin_departments_ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_admin_depatrments_rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cv"
            android:elevation="50dp">

            <Button
                android:id="@+id/activity_admin_depatrments_btn_add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="590dp"
                android:background="@drawable/custom_btn_plus_add"
                android:contentDescription="@string/btn_floating_action"
                android:drawableRight="@drawable/ic_plus"
                android:fadeScrollbars="false"
                android:paddingRight="15dp"
                android:src="@drawable/ic_plus"
                app:elevation="20dp"
                app:fabSize="normal"
                app:hoveredFocusedTranslationZ="20dp"
                app:pressedTranslationZ="20dp" />

            <ScrollView
                android:id="@+id/activity_admin_depatrments_scv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_cv"
                android:contentDescription="@string/scrolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_cv"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/activity_depatrments_cv"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/cardviews"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/activity_admin_depatrments_iv"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/ic_department">

                                </ImageView>

                                <TextView
                                    android:id="@+id/activity_admin_depatrments_tv_sub_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_toRightOf="@id/activity_admin_depatrments_iv"
                                    android:fontFamily="@font/amaranth"
                                    android:text="Computer Science"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/activity_admin_depatrments_tv_sub_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="42dp"
                                    android:layout_toRightOf="@id/activity_admin_depatrments_iv"
                                    android:fontFamily="@font/amaranth"
                                    android:text="36985758"
                                    android:textColor="@color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>