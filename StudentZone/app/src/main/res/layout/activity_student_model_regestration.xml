<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_student_Regestration_cv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="10dp"
        app:cardElevation="0dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:paddingLeft="10dp">

            <CheckBox
                android:id="@+id/activity_student_subject_tv_sub_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:buttonTint="@drawable/custom_rb_subject_registration"
                android:clickable="true"
                android:gravity="center|center_horizontal|center_vertical"
                tools:ignore="TouchTargetSizeCheck" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="30dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_student_registration_iv_cv"
                    app:cardCornerRadius="30dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/dark_blue">

                    <TextView
                        android:id="@+id/activity_student_registration_tv_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="SN"
                        android:textColor="@color/white"
                        android:maxLength="2"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/activity_student_registration_tv_sub_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/activity_student_registration_iv_cv"
                    android:text="Subject Name"
                    android:maxLines="1"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxEms="10"/>

                <TextView
                    android:id="@+id/activity_student_registration_tv_sub_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="33dp"
                    android:layout_toRightOf="@id/activity_student_registration_iv_cv"
                    android:maxLines="1"
                    android:text="Subject Code"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"/>

                <ImageButton
                    android:id="@+id/activity_student_registration_ibtn_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/custom_ibtn_more"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ic_info"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#46A1A1A1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"/>

</RelativeLayout>