<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="-10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/custom_drawer_header_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/activity_student_profile_btn_back"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/custom_btn_back"
                    android:contentDescription="@string/back"
                    android:drawableLeft="@drawable/ic_back"
                    android:drawableTint="@color/white_gray"
                    android:paddingLeft="10dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="@color/white_gray"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/activity_student_profile_btn_sittings"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="left"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/custom_btn_back"
                    android:drawableLeft="@drawable/ic_sittings"
                    android:drawableTint= "@color/white_gray"
                    android:paddingLeft="8dp"
                    tools:ignore="TouchTargetSizeCheck"
                    android:contentDescription="@string/back" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/activity_student_profile_shiv_student_photo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/white_gray"
                        app:srcCompat="@drawable/ic_male_profile"
                        app:shapeAppearanceOverlay="@style/circular"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/white"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/activity_student_profile_tv_edit_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_edit_photo"
                        android:drawablePadding="5dp"
                        android:drawableTint="@drawable/custom_tv_edit_photo"
                        android:text="Edit Photo"
                        android:textColor="@drawable/custom_tv_edit_photo"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-15dp"
            android:rotation="-180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/custom_arc_2"
            tools:srcCompat="@drawable/custom_arc_2"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:srcCompat="@drawable/custom_arc_3"
            tools:srcCompat="@drawable/custom_arc_3"
            android:rotation="-180"
            android:layout_marginTop="-68dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_profile_info_tv"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_profile_info_bg_icon"
                    android:gravity="center"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_user_2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_student_profile_tv_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#00608C"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Email Address"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_profile_info_tv"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_profile_info_bg_icon"
                    android:gravity="center"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_email_address_2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_student_profile_tv_student_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#00608C"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Academic ID"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_profile_info_tv"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_profile_info_bg_icon"
                    android:gravity="center"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_id_2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_student_profile_tv_student_academic_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#00608C"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Department"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_profile_info_tv"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_profile_info_bg_icon"
                    android:gravity="center"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_department_2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_student_profile_tv_student_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#00608C"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_profile_info_tv"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_profile_info_bg_icon"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_phone_number_2"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/activity_student_profile_et_student_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:textColor="#00608C"
                    android:textSize="14dp"
                    tools:ignore="SpeakableTextPresentCheck,TextSizeCheck"
                    android:enabled="false"
                    android:maxLength="11"/>

                <Button
                    android:id="@+id/activity_student_profile_btn_edit_phone_number"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-30dp"
                    android:background="@android:color/transparent"
                    android:drawableTint="@drawable/custom_btn_profile_edit"
                    android:contentDescription="@string/edit"
                    android:drawableLeft="@drawable/ic_edit"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck"
                    android:clickable="true"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Password"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_profile_info_tv"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_profile_info_bg_icon"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_lock_2" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_student_profile_til_student_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="false"
                    app:passwordToggleTint="@color/blue"
                    android:layout_marginLeft="10dp">

                    <EditText
                        android:id="@+id/activity_student_profile_et_student_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:textColor="#00608C"
                        android:textSize="14dp"
                        tools:ignore="SpeakableTextPresentCheck,TextSizeCheck"
                        android:enabled="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/activity_student_profile_btn_edit_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-30dp"
                    android:background="@android:color/transparent"
                    android:drawableTint="@drawable/custom_btn_profile_edit"
                    android:contentDescription="@string/edit"
                    android:drawableLeft="@drawable/ic_edit"
                    android:paddingLeft="5dp"
                    tools:ignore="TouchTargetSizeCheck"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>