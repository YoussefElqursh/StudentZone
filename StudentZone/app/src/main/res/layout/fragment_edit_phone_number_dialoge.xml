<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="230dp"
    android:background="@color/white_gray"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/fragment_edit_phone_number_dialog_tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="10dp"
        tools:ignore="TextSizeCheck"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_edit_phone_number_dialog_til_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:hintTextColor="@color/blue"
            app:helperTextTextAppearance="@style/CustomTextInputEditText">

            <EditText
                android:id="@+id/fragment_edit_phone_number_dialog_et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_et_profile_dialog"
                android:drawableStart="@drawable/ic_phone_number_3"
                android:drawablePadding="5dp"
                android:drawableTint="@drawable/custom_et_profile_dialog"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="14dp"
                tools:ignore="SpeakableTextPresentCheck,TextSizeCheck,TouchTargetSizeCheck"
                android:maxLength="11"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/fragment_edit_phone_number_dialog_btn_cansel"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn_profile_dialog_cansel"
            android:text="Cansel"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck"
            android:elevation="5dp"/>

        <Button
            android:id="@+id/fragment_edit_phone_number_dialog_btn_save"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_btn_profile_dialog_save"
            android:elevation="5dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck"
            android:enabled="false"/>

    </LinearLayout>



</LinearLayout>