<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctor_Classes.Doctor_Activities.DoctorSubjectsActivity"
    android:background="@color/blue">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_Doctor_subjects_tbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:menu="@menu/activity_admin_departments_sv_menu" >

        <Button
            android:id="@+id/activity_Doctor_subjects_btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_back"
            android:contentDescription="back arrow"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subjects"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/activity_admin_subjects_ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_cv"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_subject_recycleview"
            android:layout_marginTop="5dp"/>

   </LinearLayout>
</LinearLayout>