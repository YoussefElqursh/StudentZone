<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin_student_model_container"
    android:layout_marginBottom="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/custom_model_bg"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_admin_student_iv_cv"
                app:cardCornerRadius="30dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/dark_blue">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/activity_admin_student_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/white_gray"
                    android:clickable="true"
                    android:padding="1dp"
                    app:shapeAppearanceOverlay="@style/doctor_student_photo_style"
                    app:srcCompat="@drawable/ic_male_student"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    app:strokeColor="@null"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/activity_admin_student_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/activity_admin_student_iv_cv"
                android:text="Student Name"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activity_admin_student_tv_aid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="34dp"
                android:layout_toRightOf="@id/activity_admin_student_iv_cv"
                android:maxLines="1"
                android:text="Password"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/activity_admin_student_ibtn_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/custom_ibtn_more"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_more"
                android:layout_alignParentEnd="true"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#46A1A1A1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"/>

</RelativeLayout>