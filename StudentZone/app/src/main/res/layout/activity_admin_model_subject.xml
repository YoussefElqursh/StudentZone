<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin_subject_model_container"
    android:layout_marginBottom="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/custom_model_bg"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_admin_subject_iv_cv"
                app:cardCornerRadius="50dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/dark_blue">

                <TextView
                    android:id="@+id/activity_admin_subject_tv_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="DN"
                    android:textColor="@color/white"
                    android:maxLength="2"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="true"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/activity_admin_subject_tv_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/activity_admin_subject_iv_cv"
                android:text="Department Name"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activity_admin_subject_tv_sub_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="34dp"
                android:layout_toRightOf="@id/activity_admin_subject_iv_cv"
                android:maxLines="1"
                android:text="Department Code"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/activity_admin_subject_ibtn_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/custom_ibtn_more"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_more"
                android:layout_alignParentEnd="true"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#46A1A1A1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"/>

</RelativeLayout>