<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctor_Classes.Doctor_Activities.DoctorStudentGrades"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/activity_doctor_student_degree_ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:elevation="10dp">

            <Button
                android:id="@+id/activity_doctor_student_degree_btn_search_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_btn_back"
                android:drawableLeft="@drawable/ic_back"
                android:drawableTint="@color/white"
                android:paddingLeft="8dp"
                tools:ignore="TouchTargetSizeCheck"
                android:contentDescription="@string/back"
                android:layout_marginRight="-40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/activity_doctor_student_degree_et_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_sv"
                android:hint="Search..."
                android:textColor="@color/white"
                android:textColorHint="#B3E6E6E6"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:maxLines="1"/>

            <!-- search delete button -->
            <Button
                android:id="@+id/activity_doctor_student_degree_btn_search_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_btn_back"
                android:drawableLeft="@drawable/ic_close_2"
                android:drawableTint="@color/white"
                android:paddingLeft="8dp"
                tools:ignore="TouchTargetSizeCheck"
                android:contentDescription="@string/back"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-45dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_doctor_student_degree_tbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:visibility="visible">

            <Button
                android:id="@+id/activity_doctor_student_degree_btn_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_btn_back"
                android:drawableLeft="@drawable/ic_back"
                android:paddingLeft="8dp"
                tools:ignore="TouchTargetSizeCheck"
                android:contentDescription="@string/back"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Students Grades"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"/>

            <Button
                android:id="@+id/activity_doctor_student_degree_btn_search"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/custom_btn_back"
                android:drawableLeft="@drawable/ic_search_2"
                android:paddingLeft="6dp"
                android:paddingBottom="2dp"
                tools:ignore="TouchTargetSizeCheck"
                android:contentDescription="@string/back"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp" />

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_doctor_student_degree_ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_doctor_student_degree_rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cv"
            android:elevation="50dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_doctor_student_degree_recycleView"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>