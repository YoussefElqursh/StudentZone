<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentZone" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Customize theme of bottom sheet dialog -->
    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_fragment_add_new</item>
    </style>

    <!-- Customize switch of sittings -->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <!-- Customize Text Appearance Tab TabLayout -->
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Customize Search View -->
    <style name="SearchViewBackground" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <!-- Customize Edit profile dialog -->
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/anim_show_profile_edit_dialog</item>
        <item name="android:windowExitAnimation">@anim/anim_hide_profile_edit_dialog</item>
    </style>

    <!-- Customize Text Appearance Tab TabLayout -->
    <style name="CustomTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">10dp</item>
    </style>

    <!-- Customize Profile Photo -->
    <style name="circular">
        <item name="cornerSize">40%</item>
    </style>

    <!-- Customize Doctor and Student Model Photo -->
    <style name="doctor_student_photo_style">
        <item name="cornerSize">50%</item>
    </style>

</resources>